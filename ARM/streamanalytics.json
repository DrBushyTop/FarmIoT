{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "iotHubName": {
            "type": "string"
        },
        "consumerGroup": {
            "type": "string",
            "metadata": {
                "description": "comsumergroup name from the iothub"
            }
        },
        "notificationFunctionAppName": {
            "type": "string"
        },
        "tags": {
            "type": "object"
        }
    },
    "variables": {
      "splitConsumerGroup": "[split(parameters('consumerGroup'), '/')]"
    },
    "resources": [
        {
            "name": "[parameters('name')]",
            "type": "Microsoft.StreamAnalytics/streamingjobs",
            "apiVersion": "2016-03-01",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "properties": {
              "sku": {
                "name": "Standard"
              },
              "eventsOutOfOrderPolicy": "Adjust",
              "outputErrorPolicy": "Stop",
              "eventsOutOfOrderMaxDelayInSeconds": 0,
              "eventsLateArrivalMaxDelayInSeconds": 5,
              "dataLocale": "en-US",
              "inputs": [
                {
                  "name": "[parameters('iotHubName')]",
                  "properties": {
                    "type": "Stream",
                    "datasource": {
                      "type": "Microsoft.Devices/IotHubs",
                      "properties": {
                          "iotHubNamespace": "[parameters('iotHubName')]",
                          "sharedAccessPolicyName": "service",
                          "sharedAccessPolicyKey": "[listKeys(resourceId('Microsoft.Devices/IotHubs/Iothubkeys', parameters('iotHubName'), 'service'), '2016-02-03').primaryKey]",
                          "endpoint": "messages/events",
                          "consumerGroupName": "[variables('splitConsumerGroup')[2]]"
                      }
                    },
                    "serialization": {
                      "type": "Json",
                      "properties": {
                        "encoding": "UTF8"
                      }
                    }
                  }
                }
              ],
              "outputs": [
                {
                  "name": "configurationchange",
                  "properties": {
                    "datasource": {
                      "type": "Microsoft.AzureFunction",
                      "properties": {
                        "functionAppName": "[parameters('notificationFunctionAppNAme')]",
                        "functionName": "PLACEHOLDER",
                        "apiKey": null
                      }
                    }
                  }
                }
              ],
              "functions": []
            }
          }
    ],
    "outputs": {}
}